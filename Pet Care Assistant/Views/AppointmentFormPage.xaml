<ContentPage
    x:Class="Pet_Care_Assistant.Views.AppointmentFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New Appointment">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Pet Name" />
            <Entry Placeholder="Enter pet name"
                   Text="{Binding PetName}" />

            <Label Text="Clinic" />
            <!--  Dropdown picker for clinics -->
            <Picker Title="Select Clinic"
                    ItemsSource="{Binding AvailableClinics}"
                    SelectedItem="{Binding ClinicName}" />

            <Label Text="Date" />
            <DatePicker Date="{Binding Date}" />

            <Label Text="Time" />
            <TimePicker Time="{Binding Time}" />

            <Label Text="Reason" />
            <Entry Placeholder="Reason for visit"
                   Text="{Binding Reason}" />

            <HorizontalStackLayout Spacing="10">
                <Label Text="Send Reminder?" VerticalOptions="Center" />
                <Switch IsToggled="{Binding SendReminder}" />
            </HorizontalStackLayout>

            <Button Text="Save Appointment"
                    Command="{Binding SaveAppointmentCommand}" />

            <Button Text="Clear"
                    Command="{Binding ClearFormCommand}" />

            <Button Text="Cancel"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="LightGray" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
