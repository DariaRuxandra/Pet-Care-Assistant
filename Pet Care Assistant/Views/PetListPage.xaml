<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Class="Pet_Care_Assistant.Views.PetListPage"
    Title="Add a Pet"
    BackgroundColor="{AppThemeBinding Light='#F5F5F5', Dark='#121212'}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- Header -->
            <Label Text="ðŸ¾ Add Your Pet"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light='#222', Dark='#EEE'}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <!-- Card Container -->
            <Frame Padding="20"
                   CornerRadius="15"
                   HasShadow="True"
                   BackgroundColor="{AppThemeBinding Light='White', Dark='#1E1E1E'}">

                <VerticalStackLayout Spacing="16">

                    <!-- Pet Name -->
                    <Label Text="Pet Name"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='#333', Dark='#DDD'}" />

                    <Border Stroke="{AppThemeBinding Light='#E0E0E0', Dark='#333'}"
                            StrokeShape="RoundRectangle 10"
                            Background="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                            Padding="10">
                        <Entry Placeholder="Enter pet name"
                               Text="{Binding Name}"
                               BackgroundColor="Transparent"
                               TextColor="{AppThemeBinding Light='#222', Dark='#EEE'}"
                               PlaceholderColor="{AppThemeBinding Light='#888', Dark='#AAA'}" />
                    </Border>

                    <!-- Dog Breed -->
                    <!--<Label Text="Dog Breed"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='#333', Dark='#DDD'}" />

                    <Border Stroke="{AppThemeBinding Light='#E0E0E0', Dark='#333'}"
                            StrokeShape="RoundRectangle 10"
                            Background="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                            Padding="0"
                            HeightRequest="45">
                        <Picker Title="Select breed"
                                ItemsSource="{Binding DogBreeds}"
                                ItemDisplayBinding="{Binding Breed}"
                                SelectedItem="{Binding SelectedBreed}"
                                TextColor="{AppThemeBinding Light='#222', Dark='#EEE'}"
                                FontSize="14"
                                VerticalOptions="Center"
                                HorizontalOptions="Fill" />
                    </Border>

                    <Label Text="{Binding SelectedBreed.Breed, StringFormat='Selected: {0}'}"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light='#666', Dark='#AAA'}"
                           Margin="5,0,0,0" />-->

                    <Label Text="Dog Breed"
       FontAttributes="Bold"
       TextColor="{AppThemeBinding Light='#333', Dark='#DDD'}" />

                    <Border Stroke="{AppThemeBinding Light='#E0E0E0', Dark='#333'}"
        StrokeShape="RoundRectangle 10"
        Background="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
        Padding="6,0"
        HeightRequest="50">

                        <Grid VerticalOptions="Center" HeightRequest="50">
                            <Picker 
            Title="Select breed"
            ItemsSource="{Binding DogBreeds}"
            ItemDisplayBinding="{Binding Breed}"
            SelectedItem="{Binding SelectedBreed}"
            FontSize="13"
            HorizontalOptions="Fill"
            VerticalOptions="CenterAndExpand"
            Margin="5,0"
            TextColor="{AppThemeBinding Light='#222', Dark='#EEE'}" />
                        </Grid>
                    </Border>

                    <Label Text="{Binding SelectedBreed.Breed, StringFormat='Selected: {0}'}"
       FontSize="13"
       TextColor="{AppThemeBinding Light='#666', Dark='#AAA'}"
       Margin="5,0,0,0" />

                    <!-- Owner Information -->
                    <Label Text="Owner Information"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='#333', Dark='#DDD'}"
                           Margin="0,10,0,0" />

                    <!-- Owner Name -->
                    <Border Stroke="{AppThemeBinding Light='#E0E0E0', Dark='#333'}"
                            StrokeShape="RoundRectangle 10"
                            Background="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                            Padding="10">
                        <Entry Placeholder="Owner name"
                               Text="{Binding OwnerName}"
                               BackgroundColor="Transparent"
                               TextColor="{AppThemeBinding Light='#222', Dark='#EEE'}"
                               PlaceholderColor="{AppThemeBinding Light='#888', Dark='#AAA'}" />
                    </Border>

                    <!-- Owner Contact -->
                    <Border Stroke="{AppThemeBinding Light='#E0E0E0', Dark='#333'}"
                            StrokeShape="RoundRectangle 10"
                            Background="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                            Padding="10">
                        <Entry Placeholder="Owner contact"
                               Text="{Binding OwnerContact}"
                               Keyboard="Telephone"
                               BackgroundColor="Transparent"
                               TextColor="{AppThemeBinding Light='#222', Dark='#EEE'}"
                               PlaceholderColor="{AppThemeBinding Light='#888', Dark='#AAA'}" />
                    </Border>

                    <!-- Date of Birth -->
                    <Label Text="Date of Birth"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='#333', Dark='#DDD'}"
                           Margin="0,10,0,0" />

                    <Border Stroke="{AppThemeBinding Light='#E0E0E0', Dark='#333'}"
                            StrokeShape="RoundRectangle 10"
                            Background="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                            Padding="0"
                            HeightRequest="45">
                        <DatePicker Date="{Binding DateOfBirth, Mode=TwoWay}"
                                    MaximumDate="{x:Static sys:DateTime.Today}"
                                    FontSize="14"
                                    TextColor="{AppThemeBinding Light='#222', Dark='#EEE'}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Fill" />
                    </Border>

                    <!-- Pet Photo -->
                    <Label Text="Pet Photo"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='#333', Dark='#DDD'}"
                           Margin="0,10,0,0" />

                    <Border Stroke="{AppThemeBinding Light='#E0E0E0', Dark='#333'}"
                            StrokeShape="RoundRectangle 10"
                            Background="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                            Padding="0"
                            HeightRequest="200">
                        <Image Source="{Binding PetPhotoPath}"
                               Aspect="AspectFill"
                               HeightRequest="200" />
                    </Border>

                    <!-- Upload Photo Button -->
                    <Button Text="Upload Photo"
                            Command="{Binding PickPhotoCommand}"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45" />

                    <!-- Save Button -->
                    <Button Text="Save Pet"
                            Command="{Binding SavePetCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
